{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start frontend",
      "type": "shell",
      "command": "pnpm run --prefix frontend dev",
      "presentation": {
        "group": "Development"
      }
    },
    {
      "label": "Start backend",
      "type": "shell",
      "command": "pnpm run --prefix server start:dev",
      "presentation": {
        "group": "Development"
      }
    },
    {
      "label": "Start development",
      "type": "shell",
      "dependsOn": ["Start frontend", "Start backend"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false,
        "group": "Development"
      }
    }
  ]
}
