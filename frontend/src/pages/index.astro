---
import { Cards } from "@/components/cards-carousel/cards-carousel.component";
import { CardModel } from "@/components/card-model/card-model.component";
import { Section } from "@/components/section/section.component";
import Layout from "@/layouts/layout.astro";
import { Endpoints } from "@/components/endpoints/endpoints.component";
import { ScrollToTopButton } from "@/components/scroll-to-top-button/scroll-to-top-button.component";
---

<Layout>
  <div class="flex p-20 flex-col items-center gap-20 justify-center">
    <div id="cards">
      <Cards />
    </div>
    <div class="divider"></div>
    <div id="docs" class="flex flex-col gap-14">
      <Section header="Card model"><CardModel /></Section>
      <Section header="Endpoints"><Endpoints /></Section>
    </div>
  </div>
  <ScrollToTopButton client:load />
</Layout>
