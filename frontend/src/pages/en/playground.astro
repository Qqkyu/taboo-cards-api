---
import Layout from "@/layouts/DocsLayout.astro";
import { Playground } from "@/components/playground/playground.component";
import { getRandomCard } from "@/lib/api";
import { LOCALHOST_API_URL_PREFIX } from "@/paths/api.paths";

const cardJson = await getRandomCard({ lang: "en", apiUrlPrefix: LOCALHOST_API_URL_PREFIX });
const randomCard = JSON.stringify(cardJson, null, 2);
---

<Layout>
  <Playground initialData={randomCard} lang="en" client:load />
</Layout>
